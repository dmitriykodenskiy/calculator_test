@import '../globals/*'

html
  margin 0
  padding 0
  font-size 14px
  line-height 1.2em
  @media tablet
    font-size 12px
  @media phone
    font-size 10px
body
  margin 0
  padding 0
  font-family 'Arial', sans-serif
  font-size 14px
  font-weight 400
  min-width 320px
  min-height 500px
  line-height 1.2em
a
  color $textColorLight
  text-decoration none
  &:hover
    color $textColorLight
    text-decoration underline
body *
  box-sizing border-box
  outline none
ul
  margin 0
  padding 0
  & > li
    list-style none
    margin 0
    padding 0
p
  padding 0 0 10px 0
  margin 0

h2
  font-family $titleFont, 'Arial', sans-serif
  font-weight 500
  fsize(30)
  text-transform uppercase
  margin 0
  padding 10px 0
  line-height 1.1em
.calc
	width 600px
	min-width 320px
	margin auto
	padding 20px
	&__inner
		display flex
		justify-content space-between
		align-items center
		padding 20px 0
	&__section-name
		font-size 16px
		font-weight 600
	&__range
		width 70%
		-webkit-appearance none
		appearance none
		height 3px
		background #c5c5c5
		outline none
		opacity 0.8
		transition 0.5s
		cursor pointer
		&:hover
			opacity 1
		&::-webkit-slider-thumb
			-webkit-appearance none
			appearance none
			height 15px
			width 15px
			background #fff
			border 5px solid #92bb58
			border-radius 10px
			box-shadow 0 0 20px #92bb58
			transition 0.5s
			cursor pointer
		&::-moz-range-thumb
			height 15px
			width 15px
			background #fff
			border 5px solid #92bb58
			border-radius 10px
			box-shadow 0 0 10px #92bb58
			transition 0.5s
			cursor pointer
		&_time::-webkit-slider-thumb
			-webkit-appearance none
			appearance none
			height 10px
			width 10px
			background #92bb58
			border-radius 10px
			transition 0.5s
			cursor pointer
		&_time::-moz-range-thumb
			height 10px
			width 10px
			background #92bb58
			border-radius 10px
			transition 0.5s
			cursor pointer
.currency-wrapper
	display flex
	justify-content space-between
	align-items center
	width 9rem
.currency
	padding .5rem 1rem
	border-radius 15px
	cursor pointer
	&:hover
		background-color #92BB58
		color #fff
		transition 0.5s
.payment-choice
	display flex
	justify-content space-between
	align-items center
	width 60%
	font-size 16px
	&__choice
		cursor pointer
		padding 5px 15px
		border-radius 10px
		font-weight 600
		&:hover
			background-color #92BB58
			color #fff
			transition 0.5s
.rate
	width 60%
	&__percent
		font-weight bold
	&__mask
		font-size 12px
		color #c5c5c5
.total
	width 100%
	display flex
	&__inner
		width 50%
		margin 10px 0 40px 0
	&__sum
		font-weight bold
		font-size 16px
	&__mask
		font-size 12px
		color #c5c5c5
.button
	font-weight bold
	font-size 20px
	color #000
	width 100%
	background-color #FDDC66
	display flex
	justify-content center
	align-items center
	border-radius 35px
	padding 20px 0
	transition 0.5s
	&:hover
		text-decoration none
		color #fff
.active
	background-color #92BB58
	color #fff